(
  "is.h" output =

  ( dir =
    dir file,dir
    ( name =
      dir name path,+ f =

      (
        (output : f file,read : file,append)
        (name ".h" str,ends?)
        if
      )
      else
      (f add)
      (f file,directory?)
      if
    ) lst,each
  ) add =>
  // (String directory) -> ()

  // Start ---------------------------------------------------------------------

  ("Current dir is not '/dm/dmC/app/dmstack'" fail)
  ("dmstack.geany" file,exists? !)
  if

  output "" file,write
  "include" add
  "lib" add

  empty? assert
) run
