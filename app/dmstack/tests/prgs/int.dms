  -2 int,toIso "-2" expect
  1112 int,toIso "1.112" expect
  -1122 int,toIso "-1.122" expect
  123451112 int,toIso "123.451.112" expect
  -123451112 int,toIso "-123.451.112" expect

  0 int,toUs "0" expect
